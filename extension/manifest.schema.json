{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chrome Extension Manifest",
  "type": "object",
  "required": ["manifest_version", "name", "version", "permissions", "background", "action"],
  "properties": {
    "manifest_version": {
      "type": "integer",
      "const": 3
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+"
    },
    "description": {
      "type": "string"
    },
    "permissions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["tabs", "storage", "idle", "alarms", "notifications"]
      },
      "uniqueItems": true
    },
    "background": {
      "type": "object",
      "required": ["service_worker"],
      "properties": {
        "service_worker": {
          "type": "string",
          "pattern": ".+\\.js$"
        },
        "type": {
          "type": "string",
          "enum": ["module"]
        }
      },
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "required": ["default_popup"],
      "properties": {
        "default_title": {
          "type": "string"
        },
        "default_popup": {
          "type": "string",
          "pattern": ".+\\.html$"
        }
      },
      "additionalProperties": false
    },
    "options_page": {
      "type": "string",
      "pattern": ".+\\.html$"
    }
  },
  "additionalProperties": true
}
