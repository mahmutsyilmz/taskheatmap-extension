{
  "manifest_version": 3,
  "name": "TaskHeatmap",
  "version": "0.1.0",
  "description": "Visualize your browsing activity as a heatmap to spot productivity trends.",
  "permissions": ["tabs", "storage", "idle", "alarms", "notifications"],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "action": {
    "default_title": "TaskHeatmap",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
