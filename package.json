{
  "name": "taskheatmap-extension",
  "version": "0.1.0",
  "description": "TaskHeatmap Chrome extension project skeleton",
  "type": "module",
  "scripts": {
    "dev": "rollup -c --watch",
    "lint": "eslint .",
    "format": "prettier --check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate:manifest": "node scripts/validateManifest.js",
    "test:ui": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.ui.config.cjs",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.e2e.config.cjs",
    "build": "rollup -c",
    "package": "node scripts/package.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "4.9.0",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.14.0",
    "@rollup/plugin-commonjs": "25.0.8",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@vitest/coverage-v8": "2.1.3",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "archiver": "7.0.1",
    "chrome-launcher": "0.15.2",
    "cross-env": "7.0.3",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "expect-puppeteer": "9.0.0",
    "globals": "15.14.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-puppeteer": "9.0.2",
    "lighthouse": "12.2.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "puppeteer": "20.9.0",
    "rollup": "4.24.3",
    "rollup-plugin-copy": "3.5.0",
    "vitest": "2.1.3"
  },
  "dependencies": {
    "chart.js": "4.4.4",
    "dayjs": "1.11.13"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
